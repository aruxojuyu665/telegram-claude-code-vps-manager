# Production Configuration for JARVIS MK1 Lite

# Telegram (REQUIRED)
TELEGRAM_BOT_TOKEN=your_production_bot_token
ALLOWED_USER_IDS=[your_telegram_id]

# Anthropic (REQUIRED)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Claude Code
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=16384
CLAUDE_TIMEOUT=300

# Paths
WORKSPACE_DIR=/home/projects
SYSTEM_PROMPT_PATH=/opt/jarvis-mk1/prompts/system.md

# Logging (optional)
LOG_LEVEL=INFO
