# JARVIS MK1 Lite Configuration
# Copy this file to .env and fill in your values

# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Anthropic API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Allowed Telegram User IDs (comma-separated JSON array)
# Get your user ID from @userinfobot
ALLOWED_USER_IDS=[123456789, 987654321]

# Claude Code Settings
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=64000
CLAUDE_TIMEOUT=300

# Paths
WORKSPACE_DIR=/home/projects
SYSTEM_PROMPT_PATH=prompts/system.md

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Telethon (optional - for voice transcription via Telegram Premium)
# Get API credentials from https://my.telegram.org
# TELETHON_API_ID=12345
# TELETHON_API_HASH=abc123...
# TELETHON_PHONE=+79001234567
# TELETHON_SESSION_NAME=jarvis_premium
# VOICE_TRANSCRIPTION_ENABLED=false
